<!DOCTYPE html>
<html>
  <head>
    <title>StudentTest</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if admin_signed_in? %>
      <%= link_to('Edit registration', edit_admin_registration_path) %>
      <%= link_to('Logout', destroy_admin_session_path, method: :delete, 'data-turbo': false) %>
    <% else %>
      <%= link_to('Admin', new_admin_registration_path) %>
      <%= link_to('Login', new_admin_session_path) %>
    <% end %>

    <% if student_signed_in? %>
      <%= link_to('Edit registration', edit_student_registration_path) %>
      <%= link_to('Logout', destroy_student_session_path, method: :delete, 'data-turbo': false) %>
    <% else %>
      <%= link_to('Student', new_student_registration_path) %>
      <%= link_to('Login', new_student_session_path) %>
    <% end %>

    <%= yield %>
  </body>
</html>
