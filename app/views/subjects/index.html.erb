<h1>Admin</h1>
<h2>Subjects</h2>
<table class="table table-striped">
  <thead>
    <th>Subject Name</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
			<tr>
				<td><%= subject.sub_name %></td>
				<td><%= link_to "show", subject_path(subject.id) %></td>
				<td><%= link_to "edit", edit_subject_path(subject.id)%></td>
				<td><%= link_to "Destroy", subject_path(subject.id), data: {
					turbo_method: :delete,
					turbo_confirm: "Are you sure?"
				} %></td>
			</tr>
    <% end %>
  </tbody>
</table>
<div class="btn btn-info gap-3 col-1 mx-auto">
  <%= link_to "new", new_subject_path, :class => 'btn' %>
</div>
