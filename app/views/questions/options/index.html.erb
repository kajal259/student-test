<h1>Options</h1>
<table class="table table-striped" >
  <thead>
    <th>Question</th>
    <th>Option Name</th>
    <th>Correct</th>
    
    <th>Action</th>
  </thead>
  <tbody>
    <% @options.each do |option| %>
			<tr>
      <td><%= option.question.name %></td>
				<td><%= option.name %></td>
        <td><%= option.correct%></td>
        <td><%= link_to "Show", question_option_path(@question.id, option.id) %></td>
        <td><%= link_to "Edit", edit_question_option_path(@question.id, option.id) %></td>
        <td><%= link_to "Destroy", question_option_path(@question.id,option.id), data: {
					turbo_method: :delete,
					turbo_confirm: "Are you sure?"
				} %></td>
			</tr>
    <% end %>
   </tbody>
</table>
 
<div class="btn btn-info gap-3 col-1 mx-auto">
  <%= link_to "ADD", new_question_option_path(@question), :class => 'btn' %>
</div>
<div class="btn btn-info gap-3 col-1 mx-auto">
  <%= link_to "BACK", question_path(@question), :class => 'btn' %>
</div>

