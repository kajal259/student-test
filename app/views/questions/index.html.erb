<h1>Questions</h1>
<table border = 1>
  <thead>
    <th>Question Name</th>
    <th>Subject_name</th>
		<th>Admin</th>
		<th>Action</th>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
			<tr>
				<td><%= question.name %></td>
				<td><%= question.subject.sub_name %></td>
				<td><%= question.admin.email %></td>
				<td><%= link_to "show", question_path(question.id) %></td>
        <td><%= link_to "edit", edit_question_path(question.id) %></td>
        <td><%= link_to "Destroy", question_path(question.id), data: {
					turbo_method: :delete,
					turbo_confirm: "Are you sure?"
				} %></td>
      </tr>
    <% end %>
   </tbody>
</table>
<td><%= link_to "new", new_question_path %></td>